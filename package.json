{
  "name": "the-memory-syndicate",
  "version": "0.1.0",
  "description": "A 2D Detective Metroidvania built with vanilla JavaScript and Canvas API",
  "type": "module",
  "scripts": {
    "dev": "vite --open=false",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "export-telemetry": "node scripts/telemetry/exportInspectorTelemetry.js",
    "telemetry:fallback-report": "node scripts/telemetry/analyzeFallbackUsage.js",
    "telemetry:performance": "node scripts/telemetry/performanceSnapshot.js",
    "telemetry:performance:baseline": "node scripts/telemetry/performanceBaseline.js",
    "telemetry:performance:summary": "node scripts/telemetry/summarizePerformanceBaseline.js",
    "narrative:export-act2-dialogues": "node scripts/narrative/exportAct2BranchDialogues.js",
    "telemetry:dashboard": "node scripts/telemetry/exportQuestTelemetryDashboard.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "./run_playwright.sh test",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "profile": "node --prof benchmark.js"
  },
  "keywords": [
    "game",
    "canvas",
    "ecs",
    "detective",
    "metroidvania"
  ],
  "author": "The Memory Syndicate Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@playwright/test": "^1.47.0",
    "@types/jest": "^29.5.12",
    "babel-jest": "^30.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "terser": "^5.44.0",
    "vite": "^5.4.8"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/main.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      },
      "./src/engine/ecs/**/*.js": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      },
      "./src/engine/events/**/*.js": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      },
      "./src/engine/physics/SpatialHash.js": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      },
      "./src/utils/Vector2.js": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/tests/e2e/"
    ],
    "transform": {
      "^.+\\.js$": [
        "babel-jest",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "node": "current"
                }
              }
            ]
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@actions/artifact": "^2.2.1",
    "playwright": "^1.56.1"
  }
}
